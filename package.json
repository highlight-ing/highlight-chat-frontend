{
  "name": "highlight-chat-frontend",
  "version": "0.0.1",
  "private": false,
  "description": "The frontend, Next.JS app for Highlight Chat, the default way to interact with LLMs inside of Highlight.",
  "license": "MIT",
  "scripts": {
    "dev": "npm run backend:get && next dev",
    "build": "npm run backend:get && next build",
    "start": "npm run backend:get && next start",
    "lint": "next lint",
    "gen:supabase-types": "supabase gen types --lang=typescript --project-id ykwkqpmethjmpimvftix > src/types/supabase.ts",
    "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "prepare": "husky",
    "backend:get": "if grep -q 'NEXT_PUBLIC_URL=http://localhost:3000' .env; then npm run backend:local; else npm run backend:prod; fi",
    "backend:prod": "npx openapi-typescript https://chat-backend.highlight.ing/openapi.json -o ./src/types/backend-schema.d.ts",
    "backend:local": "npx openapi-typescript http://localhost:8080/openapi.json -o ./src/types/backend-schema.d.ts",
    "test:ts": "tsc --noEmit"
  },
